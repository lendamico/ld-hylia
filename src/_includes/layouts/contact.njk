{% extends 'layouts/base.njk' %}
{% set pageType = 'Contact' %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      {% include "partials/components/intro.njk" %}
      <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
        <form data-netlify="true" method="POST">
            <label for="name">Your name</label>
            <input type="text" name="name">
            <label for="email">Your email address</label>
            <input type="email" name="_replyto">
            <label for="message">Your message</label>
            <textarea type="textarea" name="message"></textarea>
            <input type="submit" value="Send">
        </form>

        {{ content | safe }}
      </div>
    </article>
  </main>
{% endblock %}

{{ content | safe }}
